// Covid Rapid Test page

.page-template-covid-testing {
    .navbar {
        display: none;
    }
}

#covid-header {
    margin-top: 100px;
    padding: 10% 0;
}

.logo-bar {
    background-color: #2f1d57;
    display: flex;
    justify-content: center;
    padding: 20px 40px;
    position: fixed;
    width: 100%;
    z-index: 9999;

    img {
        width: 120px;
    }
}

#covid-test-intro {
    padding: 10% 5%;
    background-color: $clutch-purple;
    @include respond-above(md) {
        background-image: url("/wp-content/themes/clutch/img/rapid-test-bg.jpg");
        background-size: cover;
        background-position: center;
    }

    p {
        color: white;
    }
}

.test-list-wrapper {
    background-color: $clutch-purple-light;
    padding: 7% 12%;
    height: 100%;
    display: flex;
    align-items: center;

    ul {
        margin: 0;

        li {
            margin: 15px 0;
            font-size: 18px;
        }
    }
}

#covid-test-policy {
    margin: 100px 0;
}

#rapid-test-form {
    background-color: $clutch-purple;
    padding: 7% 0;

    h2 {
        color: white;
    }
}

#related-info {
    margin: 100px 0;

    .pdf-card-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin: 50px 0;

        .pdf-card {
            width: 18%;
            background-color: $clutch-purple-light;
            border-radius: 25px;
            padding: 3%;
            @media (max-width: 1399px) {
                width: 48%;
                margin: 20px 0;
            }
            @include respond-below(md) {
                width: 100%;
            }

            h3 {
                line-height: normal;
                text-align: center;
                margin-bottom: 20px;
                color: $clutch-purple;
            }

            .pdf-btn {
                text-align: center;
            }
        }
    }
}

input[type="email"]:focus,
input[type="password"]:focus,
input[type="search"]:focus,
input[type="tel"]:focus,
input[type="text"]:focus,
input[type="url"]:focus,
textarea:focus {
    color: #111;
}